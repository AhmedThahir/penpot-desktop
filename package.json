{
  "name": "penpot-desktop",
  "version": "0.0.2",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build"
  },
  "author": "KorbsStudio",
  "devDependencies": {
    "electron": "^18.0.0",
    "electron-builder": "^23.3.3"
  },
  "build": {
    "appId": "com.korbsstudio.penpot",
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage",
      "category": "Network",
      "synopsis": "Use PenPot, right from your desktop",
      "description": "Use PenPot, right from your desktop"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://updates.korbsstudio.com/penpot-desktop/",
        "channel": "latest"
      }
    ]
  },
  "dependencies": {
    "electron-log": "^4.4.8",
    "electron-updater": "^5.2.1"
  }
}
