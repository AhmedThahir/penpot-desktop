  "license": "AGPL-3.0-or-later",
  "trustedDependencies": ["electron"],
  "main": "src/process/index.js",
  "homepage": "https://sudovanilla.com/code/Korbs/Penpot-Desktop/",
  "keywords": [
    "design",
    "prototyping",
    "mockups",
    "graphics"
  ],
  "bugs": {
    "url": "https://sudovanilla.com/code/Korbs/Penpot-Desktop/issues",
    "email": "support@sudovanilla.com"
  },
  "funding": [
    {
      "type": "individual",
      "url": "https://sudovanilla.com/donate/"
    }
  ],
  "scripts": {
    "start": "npm run dev",
    "build": "electron-builder --config build/electron-builder.yml",
    "build:arm": "electron-builder --config build/electron-builder.yml --arm64",
    "dev": "concurrently --kill-others \"npm run scss:app\" \"electron .\"",
    "scss:app": "sass --watch src/base/frontend/stylesheets/index.scss:src/base/frontend/stylesheets/index.css",
    "postinstall": "cd node_modules/electron && bun postinstall"
  },
  "dependencies": {
    "concurrently": "^8.2.0",
    "electron-is-dev": "^2.0.0",
    "electron-re": "^1.3.0",
    "electron-tabs": "^1.0.1",
    "electron-titlebar-respect": "^1.1.1",
    "electron-updater": "^6.1.1",
    "electron-window-state": "^5.0.3",
    "sass": "^1.63.6"
  },
  "devDependencies": {
    "electron": "^25.2.0",
    "electron-builder": "^24.6.3"
  }
}
