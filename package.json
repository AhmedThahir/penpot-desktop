{
  "name": "penpot-desktop",
  "version": "0.0.8",
  "main": "src/process/index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build"
  },
  "author": "KorbsStudio",
  "devDependencies": {
    "electron": "^20.1.4",
    "electron-builder": "^23.3.3"
  },
  "build": {
    "appId": "com.korbsstudio.penpot",
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage",
      "category": "Network",
      "synopsis": "Use PenPot, right from your desktop",
      "description": "Use PenPot, right from your desktop"
    },
    "nsis": {
      "shortcutName": "Penpot Desktop",
      "uninstallDisplayName": "Penpot Desktop",
      "artifactName": "Penpot Desktop - Setup.exe",
      "installerSidebar": "build/installerSidebar.bmp",
      "oneClick": false,
      "displayLanguageSelector": true,
      "allowElevation": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": false,
      "deleteAppDataOnUninstall": true
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://updates.korbsstudio.com/penpot-desktop/",
        "channel": "latest"
      }
    ]
  },
  "dependencies": {
    "electron-log": "^4.4.8",
    "electron-updater": "^5.2.1",
    "glasstron": "^0.1.1",
    "x11": "github:KorbsStudio/node-x11"
  }
}
